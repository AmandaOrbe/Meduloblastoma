          <p class= "indented margin5"><%= t.subgrupo4_text %></p>
          <h3 class="margin7"><%= t.MYC %> </h3>
          <p class= "indented margin5"><%= t.MYC_text %></p>
        </div>


        <div id="3.Tra">
          <%= partial(:'components/header2', :locals => { :text => t.tratamiento}) %>
          <p class="indented margin5"><%= t.tratamiento_text1 %> </p>
          <p class="indented margin5"><%= t.tratamiento_text2 %> </p>
          <p class="indented margin5"><%= t.tratamiento_text3 %> </p>
          <p class= "indented margin5">
            <%= t.tratamiento_text4 %>
            <span class="container__highlight"><%= t.tratamiento_span1 %></span>
          </p>
          <h3 class="margin7"> <%= t.radioterapia  %> </h3>
          <p class= "indented margin5"><%= t.radioterapia_text1 %></p>
          <p class= "indented margin5"><%= t.radioterapia_text2 %></p>
          <%= partial(:'components/image-big',  :locals => {
            :image => "images/LINAC.png",
            :title => t.image3_title,
            :text => t.image3_text,
            :id => "LINAC"})
          %>
          <h3 class="margin7"><%= t.quimioterapia  %> </h3>
          <p class= "indented margin5">
            <span class="container__highlight"><%= t.quimioterapia_span1 %></span>
            <%= t.quimioterapia_text1 %>
            <span class="container__highlight"><%= t.quimioterapia_span2 %></span>
            <%= t.quimioterapia_text2 %>
          </p>
        </div>

        <div id="4.Tra">
          <%= partial(:'components/header2', :locals => { :text => t.tendencias}) %>
          <p class= "indented margin5"><%= t.tendencias_text%> </p>
        </div>

      </div>

    <div id="pregunta1" class="content--2">
