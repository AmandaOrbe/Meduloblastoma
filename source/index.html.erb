            <%= partial(:'components/image-small',  :locals => { :image => "images/meduloblastoma_clasico.png",  :title => t.figura_2_a_title, :text => t.figura_2_a_text,  :id => "IDH1"}) %>
            <%= partial(:'components/image-small',  :locals => { :image => "images/meduloblastoma_clasico2.png", :title => t.figura_2_b_title, :text => t.figura_2_b_text, :id => "gradoII"}) %>
